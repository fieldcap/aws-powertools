{
  "name": "AWS Powertools",
  "version": "1.0",
  "description": "Powertools for AWS.",
  "permissions": ["tabs", "storage", "contextualIdentities", "cookies"],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "aws@powertools"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.awsapps.com/start#/", "https://*.awsapps.com/start#/*", "https://*.awsapps.com/start/*"],
      "js": ["landingpage.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.console.aws.amazon.com/*", "https://health.aws.amazon.com/*"],
      "js": ["console.js"],
      "run_at": "document_end",
      "css": ["style.css"]
    },
    {
      "matches": ["https://*.signin.aws.amazon.com/*"],
      "js": ["signin.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "options_ui": {
    "page": "options.html"
  }
}
